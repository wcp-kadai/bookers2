<div class="row">
  <div class="col-md-3">
    <div class="user-info">
      <%= render 'users/info', user: @user %>
    </div>
    <%= render 'books/form', book: @book %>
  </div>
  <div class="col-md-9">
    <h2>Books</h2>
    <table class="list-tb">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @user.books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user), class: "user_#{book.user.id}" do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book), class: "book_#{book.id}" do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
