<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#", style="color: #fff;">
            Bookers
          </a>
        </div>

        <div class="collapse navbar-collapse" id="navbarEexample7">
          <ul class="nav navbar-nav navbar-right">
            <!-- ログイン時 -->
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user), class: "home" do %>
                  <%= fa_icon "home", text: "Home" %>
                <% end %>
              </li>
              <li>
                <%= link_to users_path, class: "users" do %>
                  <%= fa_icon "user", text: "Users" %>
                <% end %>
              </li>
              <li>
                <%= link_to books_path, class: "books" do %>
                  <%= fa_icon "book", text: "Books" %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class: "logout" do %>
                  <%= fa_icon "sign-out", text: "logout" %>
                <% end %>
              </li>

              <!-- 非ログイン時 -->
            <% else %>
              <li>
                <%= link_to root_path, class: "home" do %>
                  <%= fa_icon "home", text: "Home" %>
                <% end %>
              </li>
              <li>
                <%= link_to home_about_path, class: "about" do %>
                  <%= fa_icon "link", text: "About" %>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path, class: "sign_up" do %>
                  <%= fa_icon "edit", text: "sign up" %>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, class: "sign_in" do %>
                  <%= fa_icon "sign-in", text: "login" %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <% if user_signed_in? %>
      <div class="search-form">
        <%= form_tag(search_path, method: :get) do %>
          <%= text_field_tag 'search[content]', @content %>
          <%= select_tag 'search[model]', options_for_select({ "User" => 0, "Book" => 1}) %>
          <%= select_tag 'search[how]', options_for_select({ "完全一致" => 0, "前方一致" => 1, "後方一致" => 2, "部分一致" =>  3 }) %>
          <%= submit_tag '検索' %>
        <% end %>
      </div>
    <% end %>
    <div class="container">
      <% if flash %>
        <p class="success"><%= flash[:success] %></p>
        <p class="success"><%= notice %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
